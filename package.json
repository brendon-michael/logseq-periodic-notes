{
  "main": "dist/index.html",
  "name": "logseq-plugin-periodic-notes",
  "version": "2.0.0",
  "scripts": {
    "commit": "git-cz",
    "dev": "cross-env browser=none vite",
    "dev:css": "npx tailwindcss -i .\\src\\tailwind-base.css -o .\\src\\tailwind.css --watch",
    "lint:fix": "eslint src --fix && pnpm format",
    "lint:strict": "eslint --quiet src",
    "format": "prettier -w ./src",
    "format:check": "prettier -c .",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit --incremental false",
    "preview": "vite preview",
    "build": "tsc && vite build"
  },
  "license": "MIT",
  "dependencies": {
    "@logseq/libs": "latest",
    "date-fns": "^2.25.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-tooltip": "^4.2.21",
    "react-use": "^17.3.1",
    "zustand": "^3.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@commitlint/cz-commitlint": "16.2.3",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "9.0.1",
    "@types/node": "16.11.29",
    "@types/react": "17.0.44",
    "@types/react-dom": "17.0.16",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "@vitejs/plugin-react": "1.3.1",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "commitizen": "4.2.4",
    "conventional-changelog-conventionalcommits": "4.6.3",
    "cross-env": "7.0.3",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "7.0.4",
    "inquirer": "8.2.2",
    "lint-staged": "12.4.0",
    "prettier": "2.6.2",
    "semantic-release": "19.0.2",
    "typescript": "4.6.3",
    "vite": "2.9.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,}": [
      "eslint --quiet",
      "prettier -w"
    ]
  },
  "logseq": {
    "id": "_brendon-michael-logseq-periodic-notes",
    "icon": "./logo.svg",
    "settingsVersion": "0.0.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "peerDependencies": {
    "commitizen": "^4.0.3",
    "inquirer": "^8.0.0"
  }
}
